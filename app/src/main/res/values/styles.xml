<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="OnboardingTitleTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
    </style>

    <style name="OnboardingDescTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/md_theme_dark_background</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OnboardingScreenImageStyle">
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
    </style>

    <style name="ClickableTextStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CategoryCardStyle">
        <item name="android:layout_weight">1</item>
        <item name="elevation">4dp</item>
        <item name="cardCornerRadius">@dimen/margin_medium</item>
    </style>

    <style name="MealsTextStyle">
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
    </style>

    <style name="ChipBadge">
        <item name="android:background">@drawable/chip_background</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">4dp</item>
        <item name="android:textColor">@color/chip_onBackground</item>
    </style>

    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="CardTitle" parent="TextMid">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">ro</item>
    </style>

    <style name="TextMid">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>