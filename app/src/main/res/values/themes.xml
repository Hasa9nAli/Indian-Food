<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSecondaryContainer">@color/colorPrimary</item>

        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>

        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="colorSurface">@color/colorSurface</item>

        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>

        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>

        <item name="android:statusBarColor">@color/white</item>

        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="reduceImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MyTimePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    <style name="MyTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:numbersTextColor">@color/my_color</item>
    </style>

    <color name="my_color">#FF00FF</color>
</resources>