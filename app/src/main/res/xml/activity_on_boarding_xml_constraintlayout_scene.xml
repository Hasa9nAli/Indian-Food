<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="urn:oasis:names:tc:xliff:document:1.2"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/mid_animation"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@+id/constraintLayout" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/mid_animation"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnClick
            app:clickAction="toggle"
            app:mode="toggle"
            motion:targetId="@+id/btn_next" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end_animation"
        motion:constraintSetStart="@id/mid_animation"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@+id/constraintLayout" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end_animation"
        motion:constraintSetStart="@id/mid_animation"
        motion:duration="1000">

        <OnClick
            app:clickAction="toggle"
            app:mode="toggle"
            motion:targetId="@+id/btn_next" />
    </Transition>

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/mid_animation">
        <Constraint
            android:id="@+id/onBoarding_slide_1"
            style="@style/OnboardingScreenImageStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_onboarding_image"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />


        <Constraint
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_meduim"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:alpha="1"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/onBoarding_slide_2"
            style="@style/OnboardingScreenImageStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_onboarding_image"
            android:alpha="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />


        <Constraint
            android:id="@+id/onBoarding_title_1"
            style="@style/OnboardingTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_slide_1" />

        <Constraint
            android:id="@+id/onBoarding_title_2"
            style="@style/OnboardingTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_slide_1" />


        <Constraint
            android:id="@+id/onBoarding_desc_1"
            style="@style/OnboardingDescTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onboarding_desc_height"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_title_1" />

        <Constraint
            android:id="@+id/onBoarding_desc_2"
            style="@style/OnboardingDescTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onboarding_desc_height"
            android:alpha="1"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_title_1" />

    </ConstraintSet>


    <ConstraintSet android:id="@+id/end_animation">


        <Constraint
            android:id="@+id/onBoarding_slide_1"
            style="@style/OnboardingScreenImageStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_onboarding_image"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/onBoarding_title_1"
            style="@style/OnboardingTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_slide_1" />


        <Constraint
            android:id="@+id/onBoarding_desc_1"
            style="@style/OnboardingDescTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onboarding_desc_height"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_title_1" />


        <Constraint
            android:id="@+id/onBoarding_slide_2"
            style="@style/OnboardingScreenImageStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_onboarding_image"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />


        <Constraint
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:alpha="1"
            android:layout_marginStart="@dimen/margin_meduim"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/onBoarding_slide_3"
            style="@style/OnboardingScreenImageStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_onboarding_image"
            android:alpha="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />


        <Constraint
            android:id="@+id/onBoarding_title_2"
            style="@style/OnboardingTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_slide_1" />


        <Constraint
            android:id="@+id/onBoarding_title_3"
            style="@style/OnboardingTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_slide_1" />


        <Constraint
            android:id="@+id/onBoarding_desc_2"
            style="@style/OnboardingDescTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onboarding_desc_height"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_title_1" />


        <Constraint
            android:id="@+id/onBoarding_desc_3"
            style="@style/OnboardingDescTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onboarding_desc_height"
            android:alpha="1"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/onBoarding_title_1" />

    </ConstraintSet>
</MotionScene>