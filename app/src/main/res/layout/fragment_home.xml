<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dishOfTheDayImage"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:scaleType="centerCrop"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/dishday"
        app:shapeAppearanceOverlay="@style/RoundedCorner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/overlay_for_card"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@id/dishOfTheDayImage"
        app:layout_constraintTop_toTopOf="@id/dishOfTheDayImage"
        app:layout_constraintStart_toStartOf="@id/dishOfTheDayImage"
        app:layout_constraintBottom_toBottomOf="@id/dishOfTheDayImage"
      />

  <LinearLayout
      android:id="@+id/RecipeTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintTop_toTopOf="@id/dishOfTheDayImage"
      app:layout_constraintEnd_toEndOf="@id/dishOfTheDayImage"
     android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clock"
       android:layout_gravity="center"
        android:layout_marginRight="4dp"/>

  <TextView
      android:id="@+id/RecipeCookingTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="25 min"
      android:textColor="#DEFFFFFF"
      style="@style/TextAppearance.Material3.BodyMedium"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/RecipeTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:ellipsize="end"
      app:layout_constraintBottom_toBottomOf="@id/dishOfTheDayImage"
      app:layout_constraintStart_toStartOf="@id/dishOfTheDayImage"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp">


    <TextView
        android:id="@+id/RecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black Bean Burrito"
        android:maxLines="2"
        android:ellipsize="end"
      android:paddingStart="16dp"
        android:textColor="#DEFFFFFF"
        style="@style/TextAppearance.Material3.TitleLarge"/>

    <TextView
        android:id="@+id/RecipeCuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mexican"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="#DEFFFFFF"
        style="@style/TextAppearance.Material3.BodyMedium"/>

  </LinearLayout>


  <LinearLayout
      android:id="@+id/Section_Quick_Recipies"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toBottomOf="@id/dishOfTheDayImage">


  <TextView
      style="@style/TextAppearance.Material3.TitleMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Quick Recipes"
      android:textColor="#1C1B1F" />

    <TextView
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="end"
        android:text="Show more"
        android:textColor="#8D6E63" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/Quick_Recipies"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="8dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toBottomOf="@id/Section_Quick_Recipies">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:id="@+id/Quick_Recipiess"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <com.google.android.material.imageview.ShapeableImageView
              android:id="@+id/QuickRecipesItem"
              android:layout_width="152dp"
              android:layout_height="208dp"
              android:scaleType="centerCrop"
              android:src="@drawable/dishday"
              app:shapeAppearanceOverlay="@style/RoundedCorner"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <View
              android:layout_width="152dp"
              android:layout_height="60dp"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="16dp"
              android:background="@drawable/overlay_for_recipe_items"
              android:foreground="?attr/selectableItemBackground"
              app:layout_constraintEnd_toEndOf="@id/QuickRecipesItem"
              app:layout_constraintStart_toStartOf="@id/QuickRecipesItem"
              app:layout_constraintBottom_toBottomOf="@id/QuickRecipesItem" />

          <TextView
              android:id="@+id/QuickRecipesNameItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Black Bean Burrito"
              android:textColor="#DEFFFFFF"
              android:layout_margin="8dp"
              app:layout_constraintStart_toStartOf="@id/QuickRecipesItem"
              style="@style/TextAppearance.Material3.TitleSmall"
              app:layout_constraintBottom_toBottomOf="@id/QuickRecipesItem"/>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:paddingVertical="4dp"
              android:paddingHorizontal="8dp"
              android:background="@drawable/background_for_time"
              app:layout_constraintEnd_toEndOf="@id/QuickRecipesItem"
              app:layout_constraintTop_toTopOf="@id/QuickRecipesItem">


            <TextView
                android:id="@+id/QuickRecipesTimeItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 min"
                android:textColor="#DEFFFFFF"
                style="@style/TextAppearance.Material3.LabelSmall"/>

          </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content">

          <com.google.android.material.imageview.ShapeableImageView
              android:id="@+id/QuickRecipesItem2"
              android:layout_width="152dp"
              android:layout_height="208dp"
              android:scaleType="centerCrop"
              android:src="@drawable/dishday"
              app:shapeAppearanceOverlay="@style/RoundedCorner"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <View
              android:layout_width="152dp"
              android:layout_height="60dp"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="16dp"
              android:background="@drawable/overlay_for_recipe_items"
              android:foreground="?attr/selectableItemBackground"
              app:layout_constraintEnd_toEndOf="@id/QuickRecipesItem2"
              app:layout_constraintStart_toStartOf="@id/QuickRecipesItem2"
              app:layout_constraintBottom_toBottomOf="@id/QuickRecipesItem2" />

          <TextView
              android:id="@+id/QuickRecipesNameItem2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Black Bean Burrito"
              android:textColor="#DEFFFFFF"
              android:layout_margin="8dp"
              app:layout_constraintStart_toStartOf="@id/QuickRecipesItem2"
              style="@style/TextAppearance.Material3.TitleSmall"
              app:layout_constraintBottom_toBottomOf="@id/QuickRecipesItem2"/>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:paddingVertical="4dp"
              android:paddingHorizontal="8dp"
              android:background="@drawable/background_for_time"
              app:layout_constraintEnd_toEndOf="@id/QuickRecipesItem2"
              app:layout_constraintTop_toTopOf="@id/QuickRecipesItem2">


            <TextView
                android:id="@+id/QuickRecipesTimeItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 min"
                android:textColor="#DEFFFFFF"
                style="@style/TextAppearance.Material3.LabelSmall"/>

          </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content">

          <com.google.android.material.imageview.ShapeableImageView
              android:id="@+id/QuickRecipesItem3"
              android:layout_width="152dp"
              android:layout_height="208dp"
              android:scaleType="centerCrop"
              android:src="@drawable/dishday"
              app:shapeAppearanceOverlay="@style/RoundedCorner"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <View
              android:layout_width="152dp"
              android:layout_height="60dp"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="16dp"
              android:background="@drawable/overlay_for_recipe_items"
              android:foreground="?attr/selectableItemBackground"
              app:layout_constraintEnd_toEndOf="@id/QuickRecipesItem3"
              app:layout_constraintStart_toStartOf="@id/QuickRecipesItem3"
              app:layout_constraintBottom_toBottomOf="@id/QuickRecipesItem3" />

          <TextView
              android:id="@+id/QuickRecipesNameItem3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Black Bean Burrito"
              android:textColor="#DEFFFFFF"
              android:layout_margin="8dp"
              app:layout_constraintStart_toStartOf="@id/QuickRecipesItem3"
              style="@style/TextAppearance.Material3.TitleSmall"
              app:layout_constraintBottom_toBottomOf="@id/QuickRecipesItem3"/>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:paddingVertical="4dp"
              android:paddingHorizontal="8dp"
              android:background="@drawable/background_for_time"
              app:layout_constraintEnd_toEndOf="@id/QuickRecipesItem3"
              app:layout_constraintTop_toTopOf="@id/QuickRecipesItem3">


            <TextView
                android:id="@+id/QuickRecipesTimeItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 min"
                android:textColor="#DEFFFFFF"
                style="@style/TextAppearance.Material3.LabelSmall"/>

          </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
      </LinearLayout>
    </HorizontalScrollView>
  </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>